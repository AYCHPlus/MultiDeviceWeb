<div itemscope itemprop="item" itemtype="http://localhost/KanbanItem" class="item">
  <div itemprop="title" class="title"><%= item.title %></div>
  <div itemprop="status" class="status"><%= item.status %></div>
  <div itemprop="description" class="description"><%= item.description %></div>
  <!--<div><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></div>-->
  <div class="actions">
    <%= render :partial => "actions", :locals => {:item => item} %>
  </div>
  <div class="links">
    <div><%= link_to 'Show', item, :rel => "item" %></div>
    <div><%= link_to 'Edit', edit_item_path(item) %></div>
  </div>
</div>
