<div class="main h-board"> 

  <h1>
    <%= link_to 'My Kanban board', {:action => "index"}, "itemprop" => "link", :rel => "board"  %>
  </h1>

  <div id="links">
    <%= link_to 'Navigation', {:action => "navigation"}, :rel => "index" %>
  </div>

  <%= link_to 'New Item', new_item_path, :rel => "create" %>

  <ol class="p-columns columns">

    <% Item.states.each do |state| %>
      <li class="h-column column">
      <h2 class="p-name"><%= link_to state.capitalize, {:action => state}, :rel => state %></h2>
      <ol>
        <% @items.where(:status => state).each do |item| %>
          <%= render :partial => "list_item", :locals => {:item => item} %>
        <% end %>
      </ol>
      </li>
    <% end %>
  </ol>
</div>
